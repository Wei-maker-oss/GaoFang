<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_home_hotgoods_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/item_home_hotgoods_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_home_hotgoods_img"/>

    <TextView
        android:id="@+id/item_home_hotgoods_tv_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_home_hotgoods_img"
        android:layout_below="@id/item_home_hotgoods_tv_name"/>
    <TextView
        android:id="@+id/item_hotgoods_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_home_hotgoods_img"
        android:layout_below="@id/item_home_hotgoods_tv_brief"/>
</RelativeLayout>