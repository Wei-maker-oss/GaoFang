<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_home"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_home"
            android:text="首页"
            android:textColor="@drawable/selector_text"/>
        <RadioButton
            android:id="@+id/rd_subject"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_subject"
            android:text="专题"
            android:textColor="@drawable/selector_text"/>
        <RadioButton
            android:id="@+id/rd_sort"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_sort"
            android:text="分类"
            android:textColor="@drawable/selector_text"/>
        <RadioButton
            android:id="@+id/rd_shopcar"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_shopcar"
            android:text="购物车"
            android:textColor="@drawable/selector_text"/>
        <RadioButton
            android:id="@+id/rd_my"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_my"
            android:text="我的"
            android:textColor="@drawable/selector_text"/>

    </RadioGroup>


</LinearLayout>